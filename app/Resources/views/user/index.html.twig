{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de usuario</h1>
    <a class="btn btn-primary btn-sm" href="{{ path('user_new') }}">Crear nuevo usuario</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nombres</th>
                <th>Roles</th>
                <th>Usuario</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.email }}</td>
                <td>{{ user.nombres }}</td>
                <td>
                    {% for role in user.roles %}
                        <span>{{ role }}</span>
                    {% endfor %}
                </td>
                <td>{{ user.username }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('user_show', { 'id': user.id }) }}">Ver</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('user_edit', { 'id': user.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
