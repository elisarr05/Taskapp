{% extends 'base.html.twig' %}
{% form_theme edit_form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-6">
            <h3 class="pull-left">Editar Usuario</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-primary pull-right" href="{{ path('user_index') }}">Volver a la lista</a>
            {{ form_start(delete_form) }}
                <input class="btn btn-primary pull-right  margin-right-15" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </div>
    </div>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-primary" type="submit" value="Guardar" />
    {{ form_end(edit_form) }}

{% endblock %}
