{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-6">
            <h1 class="pull-left">Tickets list</h1>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-primary pull-right" href="{{ path('ticket_new') }}">Create a new ticket</a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripccion</th>
                <th>Fecha</th>
                <th>Usuarioid</th>
                <th>Tecnicoid</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('ticket_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
                <td>{{ ticket.descripccion }}</td>
                <td>{% if ticket.fecha %}{{ ticket.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ ticket.usuario.nombres }}</td>
                <td>{{ ticket.tecnico.nombres }}</td>
                <td>{{ ticket.estado }}</td>
                <td>
                    <a class="badge badge-success" href="{{ path('ticket_show', { 'id': ticket.id }) }}">show</a>
                    <a class="badge badge-success" href="{{ path('ticket_edit', { 'id': ticket.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
