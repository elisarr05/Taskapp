{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Error!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

