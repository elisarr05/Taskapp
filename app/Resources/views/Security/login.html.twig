    {##}

    {#<button type="submit">login</button>#}
{#</form>#}

    <div class="row login-form">
        <div class="well">
            <form action="{{ path('login') }}" method="post" autocomplete="off">
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i> Login</legend>
                    <div class="form-group">
                        <label for="username">Usuario</label>
                        <input type="text" id="username" name="_username" required value="{{ last_username }}" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Contrase√±a</label>
                        <input type="password" id="password" name="_password" required class="form-control" />
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> Ingresar
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-danger" href="{{ path('register') }}">Registrate</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}
